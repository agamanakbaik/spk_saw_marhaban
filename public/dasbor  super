<!-- dashboard_superadmin.php -->
<?php
require_once __DIR__ . '/../inc/config.php';
session_start();
if (!isset($_SESSION['user']) || $_SESSION['user']['role'] !== 'superadmin') { 
    header('Location: index.php'); 
    exit; 
}
// ambil jumlah admin, kriteria, periode
$admins   = $pdo->query("SELECT COUNT(*) FROM users WHERE role='admin'")->fetchColumn();
$kritis   = $pdo->query("SELECT COUNT(*) FROM kriteria")->fetchColumn();
$periodes = $pdo->query("SELECT COUNT(*) FROM periode")->fetchColumn();
?>
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Dashboard Superadmin</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-6 bg-gray-100">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-700">Dashboard Superadmin</h1>
      <div class="flex items-center space-x-4">
        <span class="font-medium">Halo, <?= htmlspecialchars($_SESSION['user']['fullname'] ?: $_SESSION['user']['username']) ?></span>
        <a href="logout.php" class="px-3 py-1 bg-red-500 hover:bg-red-600 text-white rounded">Logout</a>
      </div>
    </div>

    <!-- Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white shadow rounded p-6 text-center">
        <p class="text-gray-500">Admins</p>
        <p class="text-4xl font-bold text-blue-600"><?= $admins ?></p>
      </div>
      <div class="bg-white shadow rounded p-6 text-center">
        <p class="text-gray-500">Kriteria</p>
        <p class="text-4xl font-bold text-green-600"><?= $kritis ?></p>
      </div>
      <div class="bg-white shadow rounded p-6 text-center">
        <p class="text-gray-500">Periode</p>
        <p class="text-4xl font-bold text-purple-600"><?= $periodes ?></p>
      </div>
    </div>

    <!-- Quick Menu -->
    <div class="bg-white shadow rounded p-6">
      <h2 class="text-xl font-semibold mb-4 text-gray-700">Menu Cepat</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <a href="manage_admin.php" class="p-4 bg-blue-50 border rounded hover:bg-blue-100">Kelola Admin</a>
        <a href="manage_kriteria.php" class="p-4 bg-green-50 border rounded hover:bg-green-100">Kelola Kriteria</a>
        <a href="manage_periode.php" class="p-4 bg-purple-50 border rounded hover:bg-purple-100">Kelola Periode</a>
        <a href="laporan.php" class="p-4 bg-yellow-50 border rounded hover:bg-yellow-100">Laporan</a>
        <a href="profil.php" class="p-4 bg-gray-50 border rounded hover:bg-gray-100">Profil</a>
      </div>
    </div>
  </div>
</body>
</html>
